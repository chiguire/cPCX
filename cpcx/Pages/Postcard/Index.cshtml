@page "{postcardId}"
@using cpcx.Entities
@using cpcx.Extensions
@model cpcx.Pages.Postcard.Index

<div class="text-center">
    <h1 class="display-4">Postcard @Model.PostcardId</h1>

    @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
    {
        <div>
            @Html.StatusMessage(Model.StatusMessage, Model.StatusMessageCssType!.Value)
        </div>
    }

    @if (Model.IsTravellingPostcard)
    {
        <p>Postcard @Model.Postcard.FullPostCardId will go to...</p>
        <p>@Model.Postcard.Receiver.UserName (@Model.Postcard.Receiver.Pronouns.GetDescription())</p>
        <p>Address: @Model.PostcardAddress</p>
    }
    else
    {
        <p>Sent on @Model.Postcard.SentOn by @Model.Postcard.Sender.UserName</p>
        <p>Received on @Model.Postcard.ReceivedOn by @Model.Postcard.Receiver.UserName</p>
    }
</div>